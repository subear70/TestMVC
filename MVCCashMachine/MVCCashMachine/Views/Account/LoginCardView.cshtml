@model MVCCashMachine.Models.CardModel
@{
    ViewBag.Title = "Card name";
}

<h2>Please enter your card number</h2>
@{
    using (Html.BeginForm("CheckCardNumber", "Account"))
    {
        @Html.AntiForgeryToken()
        <div>
            <p>
                @Html.TextBoxFor(m => m.CardNumber, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.CardNumber, "", new {@class = "text-danger"})
            </p>
        </div>
        <input type="submit" class="btn btn-default" value="Enter" />
    }
}

